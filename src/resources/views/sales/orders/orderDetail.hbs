
  <div class="invoice-header">
    <h2 class="centered-title">HÓA ĐƠN MUA HÀNG</h2>
    <div class="row">
      <div class="col-md-6">
        <h4>Số hóa đơn: #{{orderDetails.order.IDHoaDonXuat}}</h4>
        <p>Ngày đặt hàng: {{formatDate orderDetails.order.NgayXuat}}</p>
      </div>
    </div>
  </div>

  <div class="customer-info">
    <h4><strong>THÔNG TIN KHÁCH HÀNG</strong></h4>
    <div class="row">
      <div class="col-md-6">
        <p><strong>Tên khách hàng:</strong>
          {{orderDetails.order.TenNguoiNhan}}</p>
        <p><strong>Số điện thoại:</strong>
          {{orderDetails.order.SoDienThoai}}</p>
        {{!-- <p><strong>Email:</strong> {{customer.email}}</p> --}}
        <p><strong>Địa chỉ:</strong>
          {{orderDetails.order.SoNhaDuong}},
          {{orderDetails.order.QuanHuyen}},
          {{orderDetails.order.TinhThanhPho}}</p>
        <p><strong>Phương thức thanh toán:</strong>
          {{orderDetails.order.PhuongThucThanhToan}}</p>
      </div>
    </div>
  </div>

  <div class="order-items">
    <h4><strong>CHI TIẾT SẢN PHẨM</strong></h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>STT</th>
          <th>Sản phẩm</th>
          <th>Đơn giá</th>
          <th>Số lượng</th>
          <th>Thành tiền</th>
        </tr>
      </thead>
      <tbody>
        {{#each orderDetails.items}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.TenSanPham}}</td>
            <td>{{formatCurrency this.Gia}}</td>
            <td>{{this.SoLuong}}</td>
            <td>{{formatCurrency this.ThanhTien}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="order-summary">
    
    <div class="summary-container">
      <div class="summary-row">
        <div class="summary-label">Tổng tiền hàng:</div>
        <div class="summary-value">{{formatCurrency
            orderDetails.summary.subtotal
          }}</div>
      </div>
      <div class="summary-row">
        <div class="summary-label">Phí vận chuyển:</div>
        <div class="summary-value">{{formatCurrency
            orderDetails.summary.shipping
          }}</div>
      </div>
      <div class="summary-row">
        <div class="summary-label">Giảm giá:</div>
        <div class="summary-value">{{formatCurrency
            orderDetails.summary.discount
          }}</div>
      </div>
      <div class="summary-row total-row">
        <div class="summary-label">Tổng tiền:</div>
        <div class="summary-value">{{formatCurrency
            orderDetails.summary.total
          }}</div>
      </div>
    
  </div>

  <div class="footer">
    <p class="text-center">Cảm ơn quý khách đã mua hàng tại Book Store!</p>
  </div>


