<div class="main-content">
  <!-- nav bar -->
  <div class="navbar">
    <div class="navbar-toggle">
      {{! <i class="fas fa-bars"></i> }}
    </div>
    <div class="search-box">
      <label>
        <input type="text" placeholder="Tìm Kiếm" />
        <i class="fas fa-search"></i>
      </label>
    </div>
    <div class="user-profile">
      <a href="#"><img src="/user.jpg" /></a>
    </div>
  </div>

  <!-- Order Details Content -->
  <div class="order-details-container">
    <div class="order-header">
      <div class="order-title">
        <h2>Chi tiết đơn hàng #12345</h2>
        <p class="order-date">Nhân viên tạo đơn: Le Thi C</p>
        <div class="order-date">
          <i class="far fa-calendar-alt"></i>
          <span>01/01/2023</span>
        </div>
      </div>
      <div class="order-status">
        <span class="status-badge status-completed">Đã giao hàng</span>
        <span class="status-badge payment-paid">Đã thanh toán</span>
      </div>
    </div>

    <div class="order-details-grid">
      <!-- Customer Information -->
      <div class="order-details-card">
        <div class="card-header">
          <h3><i class="fas fa-user"></i> Thông tin khách hàng</h3>
        </div>
        <div class="card-body">
          <p><strong>ID khách hàng:</strong> #1</p>
          <p><strong>Tên khách hàng:</strong> Nguyễn Văn A</p>
          <p><strong>Điện thoại:</strong> 0123456789</p>
        </div>
      </div>

      <!-- Shipping Information -->
      <div class="order-details-card">
        <div class="card-header">
          <h3><i class="fas fa-shipping-fast"></i> Thông tin giao hàng</h3>
        </div>
        <div class="card-body">
          <p><strong>Địa chỉ:</strong>
            123 Đường ABC, Phường XYZ, Quận 1, TP.HCM</p>
          {{! <p><strong>Phương thức:</strong> Giao hàng tiêu chuẩn</p> }}
          <p><strong>Trạng thái:</strong> Đã giao hàng</p>
          <p><strong>Người giao hàng: </strong>Nguyễn Văn B</p>
        </div>
      </div>

      <!-- Payment Information -->
      <div class="order-details-card">
        <div class="card-header">
          <h3><i class="fas fa-credit-card"></i> Thông tin thanh toán</h3>
        </div>
        <div class="card-body">
          <p><strong>Phương thức:</strong> Thanh toán khi nhận hàng (COD)</p>
          <p><strong>Trạng thái:</strong> Đã thanh toán</p>
        </div>
      </div>
    </div>

    <!-- Order Items and Summary Side by Side -->
    <div class="items-summary-wrapper">
      <!-- Order Items -->
      <div class="order-items-card">
        <div class="card-header">
          <h3><i class="fas fa-book"></i> Sách đã đặt</h3>
        </div>
        <div class="card-body">
          <div class="order-items-table">
            <table>
              <thead>
                <tr>
                  <th>Sách</th>
                  <th>Đơn giá</th>
                  <th>Số lượng</th>
                  <th>Thành tiền</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <div class="product-info">
                      <div class="product-image">
                        <img
                          src="https://m.media-amazon.com/images/I/51Ga5GuElyL._SX331_BO1,204,203,200_.jpg"
                          alt="Sách 1"
                        />
                      </div>
                      <div class="product-details">
                        <div class="product-name">Đắc Nhân Tâm</div>
                        <div class="product-author">Dale Carnegie</div>
                        <div class="product-id">SKU: B001</div>
                      </div>
                    </div>
                  </td>
                  <td>120.000 VNĐ</td>
                  <td>1</td>
                  <td>120.000 VNĐ</td>
                </tr>

              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="order-summary-card">
        <div class="card-header">
          <h3><i class="fas fa-calculator"></i> Tổng kết đơn hàng</h3>
        </div>
        <div class="card-body">
          <div class="summary-row">
            <div class="summary-label">Tạm tính:</div>
            <div class="summary-value">320.000 VNĐ</div>
          </div>
          <div class="summary-row">
            <div class="summary-label">Phí vận chuyển:</div>
            <div class="summary-value">30.000 VNĐ</div>
          </div>
          <div class="summary-row">
            <div class="summary-label">Giảm giá:</div>
            <div class="summary-value">-20.000 VNĐ</div>
          </div>
          <div class="summary-row total">
            <div class="summary-label">Tổng cộng:</div>
            <div class="summary-value">330.000 VNĐ</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="order-actions">
      <button class="btn btn-primary"><i class="fas fa-print"></i>
        In đơn hàng</button>
      {{! <button class="btn btn-secondary"><i class="fas fa-download"></i>
          Xuất PDF</button> }}
      <button class="btn btn-success"><i class="fas fa-check"></i>
        Xác nhận đơn hàng</button>
      <button class="btn btn-danger"><i class="fas fa-times"></i>
        Hủy đơn hàng</button>
    </div>
  </div>
</div>