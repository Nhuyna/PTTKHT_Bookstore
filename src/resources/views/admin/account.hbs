{{#block "css"}}
    <link rel="stylesheet" href="/css/admin/account.css">
{{/block}}

{{#block "js"}}
    <script src="/js/admin/account.js"></script>
{{/block}}

<!-- Account table -->
<div class="account-table">
    <div class="inside-table">
        <div class="accountHeader">
            <h2>Tài khoản</h2>
            <div>
                <a href="/admin/account"><button class="reset-btn">Làm Mới</button></a>
                {{#if (or (includes action "create") (includes action "all"))}}
                <a href="/admin/account/create"><button class="add-account">Thêm Tài Khoản</button></a>
                {{/if}}
            </div>
        </div>
        <table id="account_table">
            <thead>
                <tr id="header-row">
                    <td class="sortable">Mã nhân viên<span class="arrow">▲</span></td>
                    <td class="sortable">Tên nhân viên<span class="arrow">▲</span></td>
                    <td class="sortable">Nhóm quyền<span class="arrow">▲</span></td>
                    <td>Mật khẩu</td>
                    <td>Chức năng</td>
                </tr>
            </thead>
            <tbody class="account-list">
                {{#each account}}
                    <tr>
                        <td>{{this.ID_NhanVien}}</td>
                        <td>{{this.TenNhanVien}}</td>
                        <td>{{this.TenNhomQuyen}}</td>
                        <td>*********</td>
                        <td>
                            <div class="button-container">
                                <a href="/admin/account/view/{{this.ID_NhanVien}}">
                                    <button class="icon-btn view-btn">
                                        <i class="fas fa-eye"></i>
                                        <span class="tooltip">Chi tiết</span>
                                    </button>
                                </a>
                                
                                {{#if (or (includes ../action "edit") (includes ../action "all"))}}
                                <a href="/admin/account/update/{{this.ID_NhanVien}}">
                                    <button class="icon-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                        <span class="tooltip">Chỉnh sửa</span>
                                    </button>
                                </a>
                                {{/if}}

                                {{#if (or (includes ../action "delete") (includes ../action "all"))}}
                                <button class="icon-btn delete-btn" data-id="{{this.ID_NhanVien}}">
                                    <i class="fas fa-trash-alt"></i>
                                    <span class="tooltip">Xóa</span>
                                </button>
                                {{/if}}
                            </div>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- Delete product -->
<div class="delete-popup">
    <div class="popup">
        <div class="popup-head">
            <p>Bạn có chắc chắn muốn xóa tài khoản?</p>
            <button class="popup-close-btn"><i class="fas fa-times"></i></button>
        </div>
        <div class="popup-body">
            <p>Nếu đã xóa, bạn sẽ không thể tiếp tục sử dụng thông tin tài khoản.</p>
        </div>
        <div class="popup-foot">
            <button class="popup-btn popup-cancel-btn">Hủy</button>
            <button class="popup-btn popup-confirm-btn">Xác nhận</button>
        </div>
    </div>
</div>