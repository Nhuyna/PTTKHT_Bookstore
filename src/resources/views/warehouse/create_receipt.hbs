{{#block "css"}}
  <link rel="stylesheet" href="/css/warehouse/receipt.css" />
{{/block}}

{{#block "js"}}
  <script src="/js/receipt.js"></script>
{{/block}}

<div class="receipt-table">
  <div class="inside-table">
    <div class="receiptHeader">
      <h2>Thêm Nhà Hóa Đơn Mới</h2>
      <a href="/admin/warehouse/receipt"><button class="cancel-btn">Quay lại</button></a>
    </div>

    <form method="post" action="/admin/warehouse/receipt/store">
      <div class="form-group">
        <label for="provider" class="form-label">Nhà Cung Cấp</label>
        <input
          type="text"
          class="form-control"
          id="provider"
          name="provider"
          autocomplete="off"
          placeholder="Nhập id hoặc tên nhà cung cấp ..."
          required
        />
        <div id="suggestions_provider"></div>
      </div>
      <div class="form-group">
        <label for="employee" class="form-label">Nhân Viên</label>
        <input
          type="text"
          class="form-control"
          id="employee"
          name="employee"
          autocomplete="off"
          placeholder="Nhập id hoặc tên nhân viên ..."
          required
        />
        <div id="suggestions_employee"></div>
      </div>
      <div class="form-group">
        <label for="product" class="form-label">Sản Phẩm</label>
        <input
          type="text"
          class="form-control"
          id="product"
          name="product"
          autocomplete="off"
          placeholder="Nhập id hoặc tên sản phẩm ..."
        />
        <input type="hidden" id="product_details" name="product_details" />
        <div id="suggestions_product"></div>
        <table border="1" id="product-list">
          <thead>
            <tr>
              <td>ID</td>
              <td>Tên</td>
              <td>Số lượng</td>
              <td>Giá nhập</td>
              <td>Xóa</td>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
      {{! <div class="form-group">
                <label for="payment" class="form-label">Tình Trạng Thanh Toán</label>
                <select name="payment" id="payment">
                    <option value="1">Đã thanh toán</option>
                    <option value="0">Chưa thanh toán</option>
                </select>
            </div> }}
      <button class="add-btn" type="submit">Thêm</button>
    </form>

  </div>
</div>