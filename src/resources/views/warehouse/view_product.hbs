{{#block "css"}}
  <link rel="stylesheet" href="/css/warehouse/product.css" />
{{/block}}

<div class="product-table">
  <div class="inside-table">
    <div class="productHeader">
      <h2>Chi Tiết Sản Phẩm</h2>
      <a href="/admin/warehouse/product"><button class="cancel-btn">Quay lại</button></a>
    </div>

    <form>
      <div class="form-group">
        <label for="id" class="form-label">ID Sản Phẩm</label>
        <input
          type="text"
          class="form-control"
          value="{{product.SanPhamID}}"
          id="id"
          name="id"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="name" class="form-label">Tên Sản Phẩm</label>
        <input
          type="text"
          class="form-control"
          value="{{product.TenSanPham}}"
          id="name"
          name="name"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="author" class="form-label">Tác Giả</label>
        <input
          type="text"
          class="form-control"
          value="{{product.TenTacGia}}"
          id="author"
          name="author"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="publisher" class="form-label">Nhà Xuất Bản</label>
        <input
          type="text"
          class="form-control"
          value="{{product.TenNXB}}"
          id="publisher"
          name="publisher"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="category" class="form-label">Danh Mục</label>
        <div class="list-category">
          {{#each category}}
            <input
              type="text"
              class="form-control"
              value="{{this.TenDanhMuc}}"
              id="category"
              name="category"
              readonly
            />
          {{/each}}
        </div>
      </div>
      <div class="form-group">
        <label for="price" class="form-label">Giá</label>
        <input
          type="text"
          class="form-control"
          value="{{formatCurrency product.Gia}}"
          id="price"
          name="price"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inventory" class="form-label">Số Lượng Tồn</label>
        <input
          type="text"
          class="form-control"
          value="{{product.SoLuongTon}}"
          id="inventory"
          name="inventory"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="pages" class="form-label">Số Trang</label>
        <input
          type="text"
          class="form-control"
          value="{{product.SoTrang}}"
          id="pages"
          name="pages"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="description" class="form-label">Mô Tả</label>
        <textarea
          class="form-control"
          name="description"
          id="description"
          cols="30"
          rows="10"
          readonly
        >{{product.MoTa}}</textarea>
      </div>
      <div class="form-group">
        <label for="image" class="form-label">Hình Ảnh Sản Phẩm</label>
        <div class="image-container">
          {{#each image}}
            <div class="image-frame">
              <img src="{{this.Anh}}" />
            </div>
          {{/each}}
        </div>
      </div>

    </form>

  </div>
</div>