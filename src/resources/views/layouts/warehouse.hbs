<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewp orIncludest"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Quản Lý Kho</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/warehouse/style.css" />
    {{{_blocks.css}}}

  </head>
  <body>

    <div class="container">
      <!-- side bar -->
      <div class="navigation">
        <ul>
          <li>
            <a href="/admin/warehouse">
              <span class="icon" style="min-width: 30px;"></span>
              <span class="title"><h2>BOOKSTORE</h2></span>
            </a>
          </li>
          <li>
            <a href="/admin/warehouse">
              <span class="icon"><i class="fas fa-home"></i></span>
              <span class="title">Tổng Quan</span>
            </a>
          </li>
          {{#if
            (orIncludes
              (includes permissions "qlsanpham")
              (includes permissions "qlbanhang")
            )
          }}
            <li>
              <a href="/admin/warehouse/product">
                <span class="icon"><i class="fas fa-gifts"></i></span>
                <span class="title">Sản Phẩm</span>
              </a>
            </li>
          {{/if}}
          {{#if
            (orIncludes
              (includes permissions "qldanhmuc")
              (includes permissions "qlbanhang")
            )
          }}
            <li>
              <a href="/admin/warehouse/category">
                <span class="icon"><i class="fas fa-clipboard-list"></i></span>
                <span class="title">Danh Mục</span>
              </a>
            </li>
          {{/if}}

          {{#if
            (orIncludes
              (includes permissions "qlncc") (includes permissions "qlbanhang")
            )
          }}
            <li>
              <a href="/admin/warehouse/provider">
                <span class="icon"><i class="fas fa-warehouse"></i></span>
                <span class="title">Nhà Cung Cấp</span>
              </a>
            </li>
          {{/if}}
          {{#if
            (orIncludes
              (includes permissions "qlhdn") (includes permissions "qlbanhang")
            )
          }}
            <li>
              <a href="/admin/warehouse/receipt">
                <span class="icon"><i
                    class="fas fa-file-invoice-dollar"
                  ></i></span>
                <span class="title">Hóa Đơn Nhập</span>
              </a>
            </li>
          {{/if}}
          {{#if
            (orIncludes
              (includes permissions "qltk") (includes permissions "qlbanhang")
            )
          }}
            <li>
              <a href="/admin/warehouse/statistic">
                <span class="icon"><i class="fas fa-chart-bar"></i></span>
                <span class="title">Thống Kê</span>
              </a>
            </li>
          {{/if}}
          <li>
            <a href="/admin/logout">
              <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
              <span class="title">Đăng Xuất</span>
            </a>
          </li>
        </ul>
      </div>

      <div class="main">
        <!-- nav bar -->
        <div class="topbar">
          <div class="toggle">
            <i class="fas fa-bars"></i>
          </div>

          <div class="user">
            <a href="#"><img src="/img/user.jpg" class="user-pic" /></a>
          </div>
        </div>

        {{{body}}}

      </div>
    </div>

    <script src="/js/script.js"></script>
    {{{_blocks.js}}}
  </body>
</html>